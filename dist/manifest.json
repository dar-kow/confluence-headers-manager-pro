{
  "manifest_version": 3,
  "name": "Confluence Headers Manager",
  "version": "1.1.1",
  "description": "Narzędzie do zarządzania nagłówkami ze stron Confluence",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Zarządzaj nagłówkami Confluence"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.atlassian.net/*"
  ]
}